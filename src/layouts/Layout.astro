---
import "../styles/global.css";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

const {title = "Delicias de Amor"} = Astro.props
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/img/favicon-delicias.png" />
		<title>{title}</title>
	</head>
	<body>
		<Header/>
		<main class="max-w-6xl px-5 m-auto">
			<slot />
		</main>
		<Footer/>
	</body>
</html>

<style>
	html,
	body {
		background: rgb(255, 196, 255);
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
